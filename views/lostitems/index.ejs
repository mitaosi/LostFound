<% layout('layouts/boilerplate')%>
<div id="cluster-map" ></div>
<div class="container">
    <h1>All LostItems</h1>
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
        <% for (let lostitem of lostitems){%>
            <div class="col mb-4">
              <div class="card mb-3">
                <img class="card-img-top" width="100%" height="225px" role="img" aria-label="Placeholder: Thumbnail" src="<%=lostitem.images[0].url%>" alt="Card image cap">
                <div class="card-body">
                  <h5 class="card-title"><%= lostitem.title %></h5>
                  <p class="card-text"><small class="text-muted"><%= lostitem.location%></small></p>
                  <div class="d-flex justify-content-between align-items-center">
                    <a class="btn btn-primary" href="/lostitems/<%=lostitem._id%>">View Item</a>
                    <small class="text-muted"><%= lostitem.time%></small>
                  </div>
                </div>
              </div>    
            </div>
        <% }%>
    </div>
</div>
<script>
    const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
    const lostitems = { features: <%- JSON.stringify(lostitems) %>}
</script>

<script src="/javascripts/clusterMap.js"></script>
