<% layout('layouts/boilerplate')%>
<div id="cluster-map" ></div>
<div class="container">
    <h1>All LostItems</h1>

    <% for (let lostitem of lostitems){%>
    <div class="card mb-3">
        <div class="row">
            <div class="col-md-4">
                <img class="img-fluid" alt="" src="<%=lostitem.images[0].url%>">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"><%= lostitem.title %> </h5>
                    <p class="card-text"><%= lostitem.description %></p>
                    <p class="card-text">
                        <small class="text-muted"><%= lostitem.location%></small>
                    </p>
                    <a class="btn btn-primary" href="/lostitems/<%=lostitem._id%>">View <%=lostitem.title%></a>
                </div>
            </div>
        </div>
    </div>
    <% }%>
</div>
<script>
    const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
    const lostitems = { features: <%- JSON.stringify(lostitems) %>}
</script>

<script src="/javascripts/clusterMap.js"></script>