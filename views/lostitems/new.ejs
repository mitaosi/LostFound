<% layout('layouts/boilerplate')%>
<div class="row" >
    <h1 class="text-center">New-Found Item</h1>
    <div class="col-md-8 m-auto offset-3">
        <form action="/lostitems" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="lostitem[title]" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="title">Time</label>
                <input class="form-control" type="datetime-local" id="time" name="lostitem[time]" />
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="location">Location: </label>
                <input class="form-control" type="text" id="location" placeholder="where did you found this item?" name="lostitem[location]" required>

                <div class="row g-3 mt-1">
                    <div class="col-auto">
                        <button type="button" onclick="geoFindMe()" class="btn btn-primary mb-3">Get coordinates</button>
                    </div>
                    <div class="col-7">
                      <input type="text" class="form-control" id="gps" placeholder="current location coordinates (optional)">
                    </div>
                </div>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="email">Contact Email</label>
                <div class="input-group">
                    <input type="email" class="form-control" id="email" placeholder="your email address" aria-label="email"
                        aria-describedby="email-label" name="lostitem[email]" required>
                </div>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description" placeholder="tell people more details about this item" name="lostitem[description]"
                    required></textarea>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label for="">Upload Images</label>
                <div class="form-file custom-file">
                    <input type="file" accept="image/*" class="form-file-input" name="image" id="image" capture="environment" multiple="multiple">
                    <label class="form-file-label" for="image">
                        <span class="form-file-text custom-file-label">Choose image(s)...</span>
                        <span class="form-file-button">Browse</span>
                    </label>
                </div>
            </div>
            <div class="mb-3 d-flex justify-content-center">
                <button class="btn btn-success btn-lg" type="submit">Add LostItem</button>
            </div>
        </form>
        <a href="/lostitems">All LostItems</a>
    </div>
</div>

<script src="/javascripts/getCoordinates.js"></script>